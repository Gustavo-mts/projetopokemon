<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nome" />

    <EditText
        android:id="@+id/edit_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="level" />


    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/normal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal" />

        <CheckBox
            android:id="@+id/fire_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire" />

        <CheckBox
            android:id="@+id/water_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water" />

        <CheckBox
            android:id="@+id/eletric_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eletric" />

        <CheckBox
            android:id="@+id/ice_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice" />

    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capiturar"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/showListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar Lista de Itens"
        android:layout_marginTop="8dp" />

</LinearLayout>
